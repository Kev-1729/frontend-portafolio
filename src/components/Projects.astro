---
import { AnimatedCard } from "./AnimatedCard";
import SectionHeader from "./SectionHeader.astro";

const projects = [
  {
    title: "Plataforma de IA Generativa",
    description:
      "Desarrollo de una interfaz para un modelo de IA, permitiendo a los usuarios generar contenido visual a partir de texto.",
    image: "/projects/project1.jpg",
  },
  {
    title: "Sistema de Analítica en Tiempo Real",
    description:
      "Dashboard interactivo que procesa y visualiza grandes volúmenes de datos usando WebSockets y D3.js.",
    image: "/projects/project2.jpg",
  },
  {
    title: "E-commerce de Realidad Aumentada",
    description:
      "Aplicación que permite a los usuarios probarse productos virtualmente antes de comprar, construida con Three.js y React.",
    image: "/projects/project2.jpg", // Reemplazar con imagen real
  },
];
---

<section id="projects">
  <SectionHeader
    title="Proyectos Destacados"
    subtitle="Una selección de mi trabajo, desde aplicaciones web hasta soluciones de backend."
  />
  <div class="projects-grid">
    {
      projects.map((project, index) => (
        <AnimatedCard client:visible delay={index * 0.2}>
          <div class="project-card">
            <img
              src={project.image}
              alt={`Imagen del proyecto ${project.title}`}
            />
            <div class="card-content">
              <h3>{project.title}</h3>
              <p>{project.description}</p>
            </div>
          </div>
        </AnimatedCard>
      ))
    }
  </div>
</section>

<style>
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }

  .project-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    overflow: hidden;
    backdrop-filter: blur(10px);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  .project-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .card-content {
    padding: 1.5rem;
  }

  .card-content h3 {
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }
</style>
